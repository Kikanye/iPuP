<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comp3350.iPuP.presentation.ParkerSearchActivity">

    <!-- More GUI components go here  -->
    <SearchView

        android:id="@+id/showSearchIcon"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:actionViewClass="android.widget.SearchView"
        android:iconifiedByDefault="false"
        android:orientation="horizontal"
        android:showAsAction="always"
        android:title="Search">

    </SearchView>

    <TextView
        android:id="@+id/editDate"
        style="@style/AppTheme.EntryTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showSearchIcon"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:ems="10"
        android:onClick="onDateClick"
        android:textSize="25sp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editDate" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/no_available_parking_spots"
        android:textColor="@color/colorWarning" />


    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showSearchIcon"
        android:layout_toLeftOf="@+id/editDate"
        android:layout_toStartOf="@+id/editDate"
        android:onClick="prevDayClick"
        android:text="Prev" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/showSearchIcon"
        android:layout_toEndOf="@+id/editDate"
        android:layout_toRightOf="@+id/editDate"
        android:onClick="nextDayClick"
        android:text="Next" />

    <Button
        android:id="@+id/startSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/showSearchIcon"
        android:layout_toRightOf="@+id/showSearchIcon"
        android:onClick="startSearch"
        android:text="start search" />


</RelativeLayout>
