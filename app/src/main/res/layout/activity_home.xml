<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layoutMain"
    tools:context="comp3350.iPuP.presentation.HomeActivity">

    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorButtonBack5"
        android:src="@drawable/ic_icon_ipup"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_below="@id/imageViewTitle"
        android:layout_above="@id/editTextName">
        <Button
            android:id="@+id/buttonParker"
            style="@style/AppTheme.MenuButton"
            android:background="@color/colorButtonBack3"
            android:drawableLeft="@drawable/ic_icon_car"
            android:drawableStart="@drawable/ic_icon_car"
            android:onClick="buttonParkerOnClick"
            android:text="@string/home_parker"/>

        <Button
            android:id="@+id/buttonHost"
            style="@style/AppTheme.MenuButton"
            android:background="@color/colorButtonBack4"
            android:drawableLeft="@drawable/ic_icon_park"
            android:drawableStart="@drawable/ic_icon_park"
            android:onClick="buttonHostOnClick"
            android:text="@string/home_host"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextName"
        style="@style/AppTheme.EditTextStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="" />
</RelativeLayout>
