<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comp3350.iPuP.presentation.TimePickerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <Spinner
            android:id="@+id/spinnerHour"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:entries="@array/hours"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="27dp"
            android:dropDownWidth="100dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/spinnerHour"
            android:layout_alignBottom="@+id/spinnerHour"
            android:layout_toEndOf="@+id/spinnerHour"
            android:layout_toRightOf="@+id/spinnerHour"
            android:text=":"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_dark"
            tools:text=":" />

        <Spinner
            android:id="@+id/spinnerMinute"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:dropDownWidth="100dp"
            android:entries="@array/minutes"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="27dp" />

        <Spinner
            android:id="@+id/spinnerAMPM"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonOk"
            android:layout_toRightOf="@+id/buttonOk"
            android:dropDownWidth="100dp"
            android:entries="@array/am_pm"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="27dp" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerMinute"
            android:layout_toLeftOf="@+id/buttonOk"
            android:layout_toStartOf="@+id/buttonOk"
            android:text="@string/cancel"
            android:onClick="buttonCancelOnClick"/>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/spinnerMinute"
            android:layout_alignRight="@+id/spinnerMinute"
            android:layout_below="@+id/spinnerMinute"
            android:text="@string/ok"
            android:onClick="buttonOkOnClick"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>